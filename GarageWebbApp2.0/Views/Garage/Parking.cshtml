@model GarageWebbApp2._0.Models.Vehicle

@{
    ViewBag.Title = "Park new vehicle";
}

<header class="col-xs-12">
    <h2 class="col-xs-12 text-center">Let's park a new vehicle!</h2>
</header>

<content class="col-xs-12" ng-controller="add_vehicle">
    <div class="row">
        <form method="post" action="#" ng-submit="SubmitForm">
            <input type="text" max="6" min="6" ng-model="User.RegNum" placeholder="Example ABC123" />

            <select ng-model="New.Owner">
                <option value="">-- Select a Owner --</option>
                <option ng-repeat="o in Data.Owners" ng-value="o.Owner_ID">{{o.Name}}</option>
            </select>

            <select ng-model="New.Type">
                <option value="">-- Select a Type --</option>
                <option ng-repeat="t in Data.Types" ng-value="t.Name">{{t.Name}}</option>
            </select>

            <select ng-model="New.Color">
                <option value="">-- Select a Color --</option>
                <option ng-repeat="c in Data.Colors" ng-value="c.Name">{{c.Name}}</option>
            </select>

            <input type="submit" name="ParkVehicle" value="Park new vehicle!" />
        </form>
    </div>
</content>