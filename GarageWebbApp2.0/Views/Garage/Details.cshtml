@model GarageWebbApp2._0.Models.Vehicle

@{
    ViewBag.Title = "Details";
}

<a href="@Url.Action("Index", "Garage")" class="goBack" title="Back to list"><i class="fa fa-arrow-left " aria-hidden="true"></i></a>

<header class="col-xs-12">
    <h2 class="col-xs-12 text-center">
        <span>Details about @Model.RegNum</span>
    </h2>
</header>

<content class="col-xs-12">
    <div class="col-xs-6 vehicleImageContainer">
        <div class="vehicleImage"></div>
    </div>

    <div class="col-xs-5 col-xs-offset-1">
        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.VehicleType)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.VehicleType)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.RegNum)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.RegNum)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.Owner)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.Owner)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.NumberOfWheels)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.NumberOfWheels)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.Model)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.Model)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.ModelYear)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.ModelYear)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.Color)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.Color)</p>

        <h4 class="col-xs-12">@Html.DisplayNameFor(model => model.Date)</h4>
        <p class="col-xs-12">@Html.DisplayFor(model => model.Date)</p>
    </div>
</content>